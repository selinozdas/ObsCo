<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupPage">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_new_group"
        android:layout_width="0dp"
        android:layout_height="470sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_new_group"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/group_name_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:inputType="text"
            android:hint="Grup İsmi"
            android:textSize="30sp"
            android:background="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/button_create_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_name_input"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:text="Grup Oluştur"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/button_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_name_input"
            android:layout_toRightOf="@id/button_create_group"
            android:layout_toEndOf="@id/button_create_group"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:text="Ana Menü"
            android:textSize="25sp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout >