<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupPage">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_new_group"
        android:layout_width="match_parent"
        android:layout_height="550sp"
        app:layout_constraintTop_toTopOf="parent">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_new_group"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/group_name_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="15sp"
            android:inputType="text"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@+id/button_create_group"/>
        <Button
            android:id="@+id/button_create_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp"
            android:text="Grup OluÅŸtur"
            android:textSize="20sp"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>