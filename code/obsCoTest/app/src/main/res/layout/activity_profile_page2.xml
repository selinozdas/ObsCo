<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilePage2">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/fullscreen_bot"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top|center_horizontal"
            android:background="#606060"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/profile_pic"


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:src="@drawable/bertcase" />

            <TextView
                android:id="@+id/personnel_name"

                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:src="@drawable/geributton1"
                android:text="Cumali Kocovali"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/traits_layout"

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top|center_horizontal"
            android:background="#3F4996"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/fullscreen_bot"
            tools:ignore="UselessParent"
            tools:layout_editor_absoluteX="91dp">


            <TextView
                android:id="@+id/first_trait"

                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4DC2FF"
                android:text="OBSCO"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/second_trait"

                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF7FE5"
                android:src="@drawable/geributton1"
                android:text="Behavior Score"
                android:textColor="#FFFFFF" />

        </LinearLayout>



        <LinearLayout

            android:id="@+id/texts_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/traits_layout"
            tools:ignore="UselessParent"
            tools:layout_editor_absoluteX="91dp">


        </LinearLayout>

        <ImageButton
            android:id="@+id/add_comment"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="138dp"
            android:layout_height="123dp"

            android:layout_weight="1"
            android:src="@drawable/comicon"
            app:layout_constraintBottom_toTopOf="@id/traits_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.5" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>